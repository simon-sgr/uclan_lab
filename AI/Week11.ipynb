   "source": [
    "def perceptron(inputs, weights, bias):\n",
    "  weighted_sum = sum(x * w for x, w in zip(inputs, weights)) + bias\n",
    "  return 1 if weighted_sum > 0 else 0\n",
    "\n",
    "inputs = [4,3]\n",
    "weights = [0.6,0.4]\n",
    "bias = -1\n",
    "\n",
    "output = perceptron(inputs, weights, bias)\n",
    "print(\"Prediction (Pass = 1, Fail = 0):\", output)"
   ],
